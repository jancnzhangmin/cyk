<%= render 'left' %>
<%= render 'top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>征信人列表</h5>
    </div>
    <div class="ibox-content">

    <h1>征信</h1>
      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>姓名</th>
          <th>性别</th>
          <th>年龄</th>
          <th>籍贯</th>
          <th>征信人</th>
          <th>电话</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @credits.each do |credit| %>
            <tr>
              <td><%= credit.name %></td>
              <td><%= credit.sex %></td>
              <td><%= credit.age %></td>
              <td><%= credit.placeoforigin %></td>
              <td><%= credit.upname %></td>
              <td><%= credit.tel %></td>
              <td><%= link_to '编辑征信人', edit_credit_path(credit) %></td>
              <td><%= link_to '删除征信人', credit, method: :delete, data: { confirm: '确定要删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to "新增", new_credit_path,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
      <br>
    </div>

  </div>
</div>


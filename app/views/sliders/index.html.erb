<%= render 'left' %>
<%= render 'top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>广告列表</h5>
    </div>
    <div class="ibox-content">
<h1>广告资料</h1>

<table  class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>广告链接</th>
      <th>展示开始日期</th>
      <th>展示结束日期</th>
      <th>广告图片</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= slider.link %></td>
        <td><%= slider.showstartdate %></td>
        <td><%= slider.showenddate %></td>
        <td><%= image_tag slider.slider.url %></td>
        <td><%= link_to '修改', edit_slider_path(slider) %></td>
        <td><%= link_to '删除', slider, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '创建广告', new_slider_path,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true  %>
      <br>

    </div>

  </div>

</div>
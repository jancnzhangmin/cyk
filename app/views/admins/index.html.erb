<%= render 'left' %>
<%= render 'top' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>管理员</h5>
    </div>
    <div class="ibox-content">

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>登录名</th>
      <th>用户名</th>
      <th>权限</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.login %></td>
        <td><%= admin.name %></td>
        <td><%= admin.auth %></td>
        <td><%= link_to '编辑', edit_admin_path(admin) %></td>
        <td><%= link_to '删除', admin, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "新增", new_admin_path,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
      <br>
    </div>

  </div>
</div>

